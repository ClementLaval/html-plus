{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES6",
      "DOM",
      "DOM.Iterable",
      "esnext.decorators"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": false,
    "module": "ES6",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "resources/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}