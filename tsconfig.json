{
  "compilerOptions": {
    //    "target": "ES6",
    //    "lib": [
    //      "ES6",
    //      "DOM",
    //      "DOM.Iterable"
    //    ],
    "target": "es2022",
    "lib": [
      "es2022",
      "esnext.decorators",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": false,
    "module": "ES6",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
    //    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*.ts",
    "resources/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}